<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.LoginController">
   <children>
      <VBox alignment="CENTER" layoutX="70.0" layoutY="42.0" spacing="10.0">
         <children>
            <Label text="Login" />
            <TextField fx:id="userEmailField" promptText="Email/Username" />
            <PasswordField fx:id="userPasswordField" promptText="Password" />
            <ComboBox fx:id="userRoleComboBox" promptText="Role" />
            <Button fx:id="userLoginButton" onAction="#handleLoginButtonAction" text="Login" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
